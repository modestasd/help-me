{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "jsx": "react",
      "lib": [
        "es2017",
        "es2019",
        "dom"
      ],
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "moduleResolution": "Node",
      "baseUrl": "./",
      "paths": {
        "src*": ["src*"]
      }
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": [
      "node_modules"
    ]
}
  